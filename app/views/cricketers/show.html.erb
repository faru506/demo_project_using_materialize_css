<div class="row sign-up-form">
    <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Name: <%= @cricketer.name %></span>
                <p>Email: <%= @cricketer.email %></p>
                <p>Course Enrollments: None</p>
            </div>
        </div>
        <% if @current_user == @cricketer %>
            <%= link_to '<i class="material-icons right">edit</i>Edit your profile'.html_safe, edit_cricketer_path(@cricketer), class: "waves-effect waves-light btn" %>
        <% end %>
    </div>
</div>